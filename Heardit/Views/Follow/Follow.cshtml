@model FollowModel
@using Heardit.Areas.Identity.Data;
@{
    ViewData["Title"] = "Follow";
    var IsUsersProfile = Model.User.Id.Equals(User.GetLoggedInUserId<string>());
}
<div class="card card-tertiary">
    <div class="card-header WhiteHeader">@Model.User.UserName</div>
    <div class="card-body card-text">
        <div>
            <span>Following: @Model.FollowingCount</span>
            <span>Followed By: @Model.FollowersCount</span>
        </div>
        <div class="d-flex justify-content-end mt-3">

            @if (!IsUsersProfile)
            {
                var followRoute = new Dictionary<string, string>()
            {
            { "userId", Model.User.Id }
            };
                if (Model.IsFollowing)
                {
                    <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="UnFollow" asp-controller="Profile" asp-all-route-data="followRoute">Unfollow</a>
                }
                else
                {
                    <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="Follow" asp-controller="Profile" asp-all-route-data="followRoute">Follow</a>
                }
            }
        </div>
    </div>
</div>
<br />
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" id="FollowedBy-tab" data-toggle="tab" href="#FollowedBy"
           role="tab" aria-controls="FollowedBy" aria-selected="true">Followed By</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" id="Following-tab" data-toggle="tab" href="#Following"
           role="tab" aria-controls="Following" aria-selected="false">Following</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane show active" id="FollowedBy" role="tabpanel"
         aria-labelledby="FollowedBy-tab">
        @if (Model.FollowersList.Count != 0)
        {
            @foreach (Heardit.Areas.Identity.Data.HearditUser user in Model.FollowersList)
            {
                <div class="card card-tertiary">
                    <div class="card-header">
                        @user.UserName
                    </div>
                    <div class="card-footer">
                        <div class="d-flex">
                            <a class="btn btn-sm mr-2 btn-primary border-dark" asp-controller="Profile" asp-action="Index" asp-route-username=@user.UserName>View Profile</a>
                        </div>
                    </div>
                </div>
                <br>
            }
        }
        else
        {
            <p>This user is not followed by anyone.</p>
        }
    </div>
    <div class="tab-pane" id="Following" role="tabpanel" aria-labelledby="Following-tab">
        @if (Model.FollowingList.Count != 0)
        {
            @foreach (Heardit.Areas.Identity.Data.HearditUser user in Model.FollowingList)
            {
                <div class="card card-tertiary">
                    <div class="card-header">
                        @user.UserName
                    </div>
                    <div class="card-footer">
                        <div class="d-flex">
                            <a class="btn btn-sm mr-2 btn-primary border-dark" asp-controller="Profile" asp-action="Index" asp-route-username=@user.UserName>View Profile</a>
                        </div>
                    </div>
                </div>
                <br>
            }
        }
        else
        {
            <p>This user is not following anyone.</p>
        }
    </div>
</div>