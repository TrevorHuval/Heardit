<!DOCTYPE html>
<html lang="en" style='display: none;'>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heardit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/4c33eb7a9e.js" crossorigin="anonymous"></script>
    <script>
        window.onload = function() {
            document.querySelector('html').style.display = '';
        }
        </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Heardit</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Search" asp-action="_Search">
                                <div class="container">
                                    <div class="input-group">
                                        <button id="submitSearch" type="submit" class="btn btn-outline-secondary py-2 border-0 shadow-none rounded-pill" value="Search" [disabled]="!(/^\s+/)" onClick="return document.getElementById('searchInput').value !=''">
                                            <i class="fa-solid fa-magnifying-glass fa-lg"></i>
                                        </button>
                                        <span class="input-group-append">
                                            <input id="searchInput" type="text" class="form-control py-2 shadow-none rounded-pill ms-n5" name="SearchString" required />
                                        </span>

                                    </div>

                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2022 - Heardit - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://open.spotify.com/embed-podcast/iframe-api/v1" async></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
